<%- include("partials/header") -%>
    <h1>HOME</h1>
    <p>
        <%= home %>
    </p>
    <p>
        <% posts.forEach(function(post) { %>
            <h1>
                <%= post.title %>
            </h1>
            <div class="lg-3">
                <p>
                    <%= post.content.substring(0, 100) + "..." %>
                        <a href="/posts/<%= post.title %>">Read more</a>
                </p>
            </div>

            <% }) %>
                <a href="/compose">
                    <button class="btn btn-primary" href="/compose">Compose</button>
                </a>
    </p>
    <%- include("partials/footer") -%>